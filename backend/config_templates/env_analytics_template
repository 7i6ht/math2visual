# Analytics Database Configuration Template for Math2Visual
# Copy this file to .env and fill in your actual values

# Analytics Database Configuration
# Format: postgresql://username:password@host:port/database
# For development, you can also use SQLite: sqlite:///./analytics.db
DATABASE_URL=postgresql://math2visual_user:your_secure_password@localhost:5432/math2visual_analytics

# Database Configuration
DATABASE_ECHO=false  # Set to true for SQL query logging (development only)

# Analytics Configuration
ANALYTICS_ENABLED=true  # Set to false to disable user action tracking
ANALYTICS_RETENTION_DAYS=90  # How long to keep analytics data (days)

# Optional: Analytics Database Backup
ANALYTICS_BACKUP_DIR=/var/backups/math2visual_analytics
ANALYTICS_BACKUP_RETENTION_DAYS=30
